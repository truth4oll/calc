<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res/com.example"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
        >


    <TextView
            android:id="@+id/history"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textSize="40dip"
            />
    <TextView
            android:id="@+id/text"
            android:textColor="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#F79910"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:textSize="20dip"
            android:visibility="gone"
            />

    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <Button android:id="@+id/sum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"
                android:onClick="actionButton"/>
        <Button android:id="@+id/minus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:onClick="actionButton"/>
        <Button android:id="@+id/multiply"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ã—"
                android:layout_weight="1"
                android:onClick="actionButton"/>
        <Button android:id="@+id/division"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_weight="1"
                android:onClick="actionButton"/>
    </TableRow>

    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <com.example.NumButton android:id="@+id/num1"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:text="1"
                              app:value="@integer/num1"
                              android:layout_weight="1"
                              android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num2"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:text="2"
                              app:value="@integer/num2"
                              android:layout_weight="1"
                              android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num3"
                              android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:text="3"
                              app:value="@integer/num3"
                              android:layout_weight="1"
                              android:onClick="numButtonAction"/>

    </TableRow>
    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <com.example.NumButton android:id="@+id/num4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="4"
                app:value="@integer/num4"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="5"
                app:value="@integer/num5"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="6"
                app:value="@integer/num6"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>

    </TableRow>
    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <com.example.NumButton android:id="@+id/num7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="7"
                app:value="@integer/num7"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="8"
                app:value="@integer/num8"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>
        <com.example.NumButton android:id="@+id/num9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="9"
                app:value="@integer/num9"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>

    </TableRow>
    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

        <com.example.NumButton android:id="@+id/num0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="0"
                app:value="@integer/num0"
                android:layout_weight="1"
                android:onClick="numButtonAction"/>

    </TableRow>
    <View
            android:layout_height="2dip"
            android:background="#FF909090"/>
    <TableRow android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
        <Button android:id="@+id/sum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_weight="1"
                android:onClick="summaryButton"/>
        <Button android:id="@+id/clear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_weight="1"
                android:onClick="clearButton"/>
    </TableRow>

</TableLayout>

